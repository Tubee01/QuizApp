<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.example.android.quizapp.MainActivity"
    >
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1.) What is the main river traversing Hungary from west to east?"
    />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textCapWords"
        />

    <TextView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2.) When were Buda, Pest and Obuda merged to form the city of Budapest?"
    />
<RadioGroup
    android:id="@+id/radioGroup1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RadioButton
        android:id="@+id/the1817_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1817" />

    <RadioButton
        android:id="@+id/the1873_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1873"
        />

    <RadioButton
        android:id="@+id/the1948_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1948"
        />
    <RadioButton
        android:id="@+id/the1920_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1920"
        />
</RadioGroup>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.) What is the approximate population of Hungary (2009 estimate)?"
        />
    <RadioGroup
        android:id="@+id/radioGroup2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/the5.3_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.3 million" />

    <RadioButton
        android:id="@+id/the15_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 million"
        />

    <RadioButton
        android:id="@+id/the10_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 million"
        />
    <RadioButton
        android:id="@+id/the8_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8 million"
        />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.) Hungary has a common border with seven other countries.Which of the following does it NOT border on?"
        />
    <RadioGroup
        android:id="@+id/radioGroup3"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
        android:id="@+id/ukraine_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ukraine"
        />

        <RadioButton
            android:id="@+id/bosnnia_radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bosnia" />

        <RadioButton
        android:id="@+id/croatia_radiobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Croatia"
        />
    <RadioButton
        android:id="@+id/romania_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Romania"
        />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.) Which group (or family) of languages does Hungarian belong to?"/>
    <RadioGroup
        android:id="@+id/radioGroup4"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/f_U_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finno-Ugric" />

    <RadioButton
        android:id="@+id/slavonic_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slavonic"
        />

    <RadioButton
        android:id="@+id/germanic_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Germanic"
        />
    <RadioButton
        android:id="@+id/turkic_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turkic"
        />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.) Approximately when was Hungary under (virtually continuous) Habsburg rule?"/>
    <RadioGroup
        android:id="@+id/radioGroup5"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/the1699_1918_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1699-1918" />

    <RadioButton
        android:id="@+id/the1537_1919_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1537-1919"
        />

    <RadioButton
        android:id="@+id/the1602_1944_radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1602-1944"
        />
    <RadioButton
        android:id="@+id/the1440_1918_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1440-1918"
        />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7.)  When did the Hungarians rise in revolt against Soviet rule?"/>
    <RadioGroup
        android:id="@+id/radioGroup6"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/the1956_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1956" />

    <RadioButton
        android:id="@+id/the1968_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1968"
        />

    <RadioButton
        android:id="@+id/the1953_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1953"
        />
    <RadioButton
        android:id="@+id/the1969_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1969"

        />
    </RadioGroup>
    <Button
        android:id="@+id/submitAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Submit Answers"
        android:onClick="submitAnswers"
        />
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Reset"
        android:onClick="resetAnswers"
        />



</LinearLayout>
</ScrollView>